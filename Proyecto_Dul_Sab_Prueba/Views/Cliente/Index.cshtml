@{
    ViewData["Title"] = "Mi Perfil";
}

<style>
    .perfil-container {
        max-width: 800px;
        margin: 50px auto;
        background: #dddd;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
        display: flex;
        align-items: center;
    }

    .perfil-sidebar {
        width: 35%;
        background: #8aace3;
        text-align: center;
        padding: 20px;
        border-right: 2px solid #4535;
    }

    .perfil-img {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #ccc;
    }

    .btn-cerrar {
        display: block;
        margin-top: 15px;
        padding: 10px;
        font-size: 16px;
        border-radius: 8px;
        text-decoration: none;
        color: white;
        background-color: #333;
    }

    .perfil-content {
        width: 65%;
        padding: 20px;
    }

    .perfil-info {
        font-size: 18px;
        margin-bottom: 10px;
    }

    .botones-container {
        margin-top: 20px;
        display: grid;
        gap: 12px;
    }

    .btn-custom {
        display: block;
        padding: 12px;
        font-size: 16px;
        border-radius: 8px;
        text-decoration: none;
        color: white;
        text-align: center;
    }

    .btn-carrito,
    .btn-estado,
    .btn-historial,
    .btn-home {
        background-color: #555; 
    }

    .btn-cerrar {
       
    }
</style>

<div class="perfil-container">
    <!-- 📌 Sección izquierda: Imagen y botón de cierre -->
    <div class="perfil-sidebar">
        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSeRakKZ5OBynaqHLdHKWENtBoXs73kckpuDWXN_07M5XqU1XBE3lGhBRxdxx2QxjFrm8o&usqp=CAU" alt="Usuario" class="perfil-img" />

        <p class="perfil-info">@ViewData["Nombre"]</p>
        <strong>@Html.Label("lblCliente", "Correo: ")</strong><p class="perfil-info">@ViewData["Correo"]</p>
        <strong>@Html.Label("lblTelefono", "Telefono: ")</strong><p class="perfil-info">@ViewData["Telefono"]</p>
        <strong>@Html.Label("lblDireccion", "Dirección: ")</strong><p class="perfil-info">@ViewData["Direccion"]</p>

        @Html.ActionLink("Cerrar Sesión", "Logout", "Login", null, new { @class = "btn-cerrar" })
    </div>

    <!-- 📌 Sección derecha: Bienvenida y opciones -->
    <div class="perfil-content">
        <h2>Bienvenido, @ViewData["Nombre"]</h2>
        <p><strong>Tus opciones: </strong></p>

        <div class="botones-container">
            @Html.ActionLink("Mi Carrito", "Index", "Carrito", null, new { @class = "btn-custom btn-carrito" })
            @Html.ActionLink("Estado del Pedido", "Index", "Estado", null, new { @class = "btn-custom btn-estado" })
            @Html.ActionLink("Historial de Pedidos", "Historial", "Pedidos", null, new { @class = "btn-custom btn-historial" })
            @Html.ActionLink("Actualizar Información", "ActualizarCliente", "Cliente", null, new { @class = "btn-custom btn-historial" })
            @Html.ActionLink("Volver al Inicio", "Index", "Inicio", null, new { @class = "btn-custom btn-home" })
        </div>
    </div>
</div>
